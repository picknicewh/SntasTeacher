<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="@dimen/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <com.wh.sntasteacher.widget.CircleImageView
            android:id="@+id/cv_head"
            android:layout_width="@dimen/space_x5"
            android:layout_height="@dimen/space_x5"
            android:scaleType="centerCrop"
            android:src="@mipmap/timng" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="花花"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/ts_x_large" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_x0.5"
                android:layout_marginTop="@dimen/space_x0.5"
                android:text="今天吃了半斤糖，哈哈哈哈"
                android:textSize="@dimen/ts_x_large" />

            <RelativeLayout
                android:id="@+id/rl_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_x0.5"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="2016-09-25 17:06"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="@color/colorAccent"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_praise"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:padding="@dimen/space_x0.5"
                    android:src="@mipmap/ic_praise" />
                <TextView
                    android:id="@+id/tv_praise_num"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="18"
                    android:textColor="@color/main_text_color" />

                <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_x0.5"
                    android:src="@mipmap/ic_comment" />
                <TextView
                    android:id="@+id/tv_comment_num"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="23"
                    android:textColor="@color/main_text_color" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>