<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <com.wh.sntasteacher.widget.NoScrollViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <View
        android:background="@color/divine_line_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_x0.1"/>
    <RadioGroup
        android:id="@+id/rg_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/space">
        <RadioButton
            android:id="@+id/rb_class_home"
            style="@style/home_nav_btn"
            android:checked="true"
            android:drawableTop="@drawable/home_class"
            android:text="@string/class_home" />

        <RadioButton
            android:id="@+id/rb_study_circle"
            style="@style/home_nav_btn"
            android:drawableTop="@drawable/study_circle"
            android:text="@string/study_circle" />

        <RadioButton
            android:id="@+id/rb_group_info"
            style="@style/home_nav_btn"
            android:drawableTop="@drawable/group_message"
            android:text="@string/group_info" />

        <RadioButton
            android:id="@+id/rb_user_center"
            style="@style/home_nav_btn"
            android:drawableTop="@drawable/user_center"
            android:text="@string/user_center" />
    </RadioGroup>
</LinearLayout>
