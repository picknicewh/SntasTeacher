<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.wh.sntasteacher.ui.login.LoginActivity">

    <EditText
        android:layout_margin="@dimen/space_x2"
        android:padding="@dimen/space"
        android:background="@drawable/grey_border_bg"
        android:id="@+id/et_phone"
        android:hint="请输入手机号"
        android:textSize="@dimen/ts_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginLeft="@dimen/space_x2"
        android:layout_marginRight="@dimen/space_x2"
        android:id="@+id/et_password"
        android:hint="请输入密码"
        android:padding="@dimen/space"
        android:background="@drawable/grey_border_bg"
        android:textSize="@dimen/ts_medium"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />
    <TextView
        android:id="@+id/btn_login"
        android:layout_marginTop="@dimen/space_x3"
        android:layout_marginLeft="@dimen/space_x3"
        android:layout_marginRight="@dimen/space_x3"
        android:text="登  录"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_x_large"
        android:padding="@dimen/space"
        android:background="@drawable/round_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/space"
        android:layout_marginLeft="@dimen/space_x3"
        android:layout_marginRight="@dimen/space_x3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_login"
            android:text="免注册登录"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/ts_small"
            android:textColor="@color/main_text_color"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_find_password"
            android:textSize="@dimen/ts_small"
            android:text="忘记密码？"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/space_x4"
        android:layout_gravity="center"
        android:text="一键登录"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/ts_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center"
        android:layout_margin="@dimen/space_x3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_qq"
            android:layout_width="wrap_content"
             android:layout_marginRight="@dimen/space_x3"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/ic_wechart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
