<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wh.sntasteacher.ui.login.RegisterActivity">

    <EditText
        android:layout_margin="@dimen/space_x2"
        android:padding="@dimen/space"
        android:background="@drawable/grey_border_bg"
        android:id="@+id/et_phone"
        android:hint="请输入手机号"
        android:textSize="@dimen/ts_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="@dimen/space_x2"
        android:layout_marginRight="@dimen/space_x2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText

            android:id="@+id/et_check_number"
            android:hint="请输入验证码"
            android:padding="@dimen/space"
            android:background="@drawable/grey_border_bg"
            android:textSize="@dimen/ts_medium"
            android:layout_marginRight="@dimen/space_x2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp" />
        <TextView
            android:text="获取验证码"
            android:textColor="@color/white"
            android:padding="@dimen/space"
            android:background="@drawable/round_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_next"
        android:layout_marginTop="@dimen/space_x3"
        android:layout_marginLeft="@dimen/space_x3"
        android:layout_marginRight="@dimen/space_x3"
        android:text="下一步"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_x_large"
        android:padding="@dimen/space"
        android:background="@drawable/round_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
