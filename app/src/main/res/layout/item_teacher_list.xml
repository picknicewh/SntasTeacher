<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/divine_line_color">
    <LinearLayout
        android:layout_marginBottom="@dimen/space_x0.1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="@dimen/space"
        android:id="@+id/ll_content"
        android:layout_height="wrap_content">
        <com.wh.sntasteacher.widget.CircleImageView
            android:id="@+id/civ_image"
            android:src="@mipmap/timng"
            android:layout_gravity="center"
            android:layout_width="@dimen/space_x5"
            android:layout_height="@dimen/space_x5" />
        <LinearLayout
            android:layout_marginLeft="@dimen/space"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:text="王老师"
                    android:layout_marginTop="@dimen/space_x0.5"
                    android:layout_marginRight="@dimen/space"
                    android:textSize="@dimen/ts_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_teacher_title"
                    android:text="讲师"
                    android:layout_marginTop="@dimen/space_x0.5"
                    android:textSize="@dimen/ts_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_teacher_school"
                    android:layout_marginTop="@dimen/space_x0.5"
                    android:text="加州福利亚大学教授  "
                    android:textSize="@dimen/ts_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_fans"
                    android:layout_marginTop="@dimen/space_x0.5"
                    android:text="粉丝 100 "
                    android:textSize="@dimen/ts_small"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_attention"
                    android:layout_marginTop="@dimen/space_x0.5"
                    android:text="关注 100 "
                    android:textSize="@dimen/ts_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_teacher_type"
                android:layout_marginTop="@dimen/space_x0.5"
                android:text="托福考试老师"
                android:textSize="@dimen/ts_small"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_read_course"
                android:layout_marginTop="@dimen/space_x0.5"
                android:text="查看老师所有课程表"
                android:textSize="@dimen/ts_small"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>